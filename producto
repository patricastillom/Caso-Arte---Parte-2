    <script>
      $(document).ready(function(){
        $("#looney").click(function(){
          var leoda = "https://api.artic.edu/api/v1/artworks?fields=id,title,artist_display,date_display,main_reference_number"
          $.get(leoda,function(data){
            console.log(data)
            $.each(data.data,function(i,item){
              console.log(data)
              $("#Paint").append("<tr><td>"+ item.id+"</td><td>"+item.main_reference_number+"</td><td>"+item.title +"</td><td>"+item.date_display +"</td></tr>")
              console.log("ok")
            })
          }) 
        })
      })
    </script>
